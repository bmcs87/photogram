<div class="page-header">
  <h1>
    Comments
    <a href="/comments/new" class="btn btn-lg btn-success">New Comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Users</th>
        <th>Description</th>
        <th>Photos</th>
        <th>Friend</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <% if comment.users.present? %>
            <a href="/users/<%= comment.users.id %>">
              <%= comment.users.email %>
            </a>
          <% end %>
        </td>
        <td><%= comment.description %></td>
        <td>
          <% if comment.photos.present? %>
            <a href="/photos/<%= comment.photos.id %>">
              <%= comment.photos.description %>
            </a>
          <% end %>
        </td>
        <td><%= comment.friend_id %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
