<div class="page-header">
  <h1>
    Friends
    <a href="/friends/new" class="btn btn-lg btn-success">New Friend</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Users</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td>
          <% if friend.users.present? %>
            <a href="/users/<%= friend.users.id %>">
              <%= friend.users.email %>
            </a>
          <% end %>
        </td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.password %></td>
        <td>
          <a href="/friends/<%= friend.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @friends, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
