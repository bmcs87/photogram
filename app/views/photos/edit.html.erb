<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_photo/<%= @photo.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @photo.description %>">
      </div>

      <!-- Label and input for users_id -->
      <div class="form-group">
        <label for="users_id" class="control-label">
          Users
        </label>

        <input type="text" id="users_id" name="users_id" placeholder="Users" class="form-control" value="<%= @photo.users_id %>">
      </div>

      <!-- Label and input for comments_id -->
      <div class="form-group">
        <label for="comments_id" class="control-label">
          Comments
        </label>

        <input type="text" id="comments_id" name="comments_id" placeholder="Comments" class="form-control" value="<%= @photo.comments_id %>">
      </div>

      <!-- Label and input for friend_id -->
      <div class="form-group">
        <label for="friend_id" class="control-label">
          Friend
        </label>

        <input type="text" id="friend_id" name="friend_id" placeholder="Friend" class="form-control" value="<%= @photo.friend_id %>">
      </div>

      <button class="btn btn-warning">
        Update Photo
      </button>
      or
      <a href="/photos/<%= @photo.id %>">Cancel</a>
    </form>
  </div>
</div>
