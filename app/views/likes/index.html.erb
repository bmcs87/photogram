<div class="page-header">
  <h1>
    Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Users</th>
        <th>Photos</th>
        <th>Comments</th>
        <th>Friend</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <% if like.users.present? %>
            <a href="/users/<%= like.users.id %>">
              <%= like.users.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if like.photos.present? %>
            <a href="/photos/<%= like.photos.id %>">
              <%= like.photos.description %>
            </a>
          <% end %>
        </td>
        <td>
          <% if like.comments.present? %>
            <a href="/comments/<%= like.comments.id %>">
              <%= like.comments.users_id %>
            </a>
          <% end %>
        </td>
        <td><%= like.friend_id %></td>
        <td>
          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @likes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
