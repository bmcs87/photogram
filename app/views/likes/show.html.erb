<div class="page-header">
  <h3>Like #<%= @like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Users</dt>
      <dd>
        <% if @like.users.present? %>
          <a href="/users/<%= @like.users_id %>">
            <%= @like.users.email %>
          </a>
        <% end %>
      </dd>

      <dt>Photos</dt>
      <dd>
        <% if @like.photos.present? %>
          <a href="/photos/<%= @like.photos_id %>">
            <%= @like.photos.description %>
          </a>
        <% end %>
      </dd>

      <dt>Comments</dt>
      <dd>
        <% if @like.comments.present? %>
          <a href="/comments/<%= @like.comments_id %>">
            <%= @like.comments.users_id %>
          </a>
        <% end %>
      </dd>

      <dt>Friend</dt>
      <dd><%= @like.friend_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/likes" class="btn btn-primary">
        Back
      </a>
      <a href="/likes/<%= @like.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_like/<%= @like.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
